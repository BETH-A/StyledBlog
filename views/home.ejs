<%- include('partials/header'); -%>



<div class="content">

  <h1>Home</h1>

  <p><%= startingContent %></p>

  <div class="box">
      <% posts.forEach(function(post) { %>
          <div class="item">
            <h1> <%= post.title %></h1>
            <p> <%= post.content.substring(0,100) + "..."%>
              <a href="/posts/<%= post.title %>">Read More</a>
            </p>
          </div>
        <%});%>
  </div>
</div>


<%- include('partials/footer'); -%>
